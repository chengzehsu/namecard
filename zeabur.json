{
  "build": {
    "command": "pip install -r requirements.txt",
    "directory": ".",
    "force": true,
    "nocache": true
  },
  "environment": {
    "FLASK_ENV": "production",
    "PORT": "5002",
    "PYTHONUNBUFFERED": "1",
    "PYTHON_VERSION": "3.9",
    "SERVICE_TYPE": "line-bot",
    "FORCE_REBUILD": "20250811"
  },
  "healthcheck": {
    "interval": 30,
    "path": "/health",
    "retries": 3,
    "timeout": 10
  },
  "name": "line-bot-namecard",
  "port": 5002,
  "regions": [
    "hkg"
  ],
  "start": {
    "command": "python app.py",
    "directory": "."
  },
  "workdir": "."
}
