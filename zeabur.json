{
  "name": "namecard-app",
  "build": {
    "command": "pip install -r requirements-telegram.txt"
  },
  "start": {
    "command": "python main.py"
  },
  "environment": {
    "PORT": "5003",
    "PYTHON_VERSION": "3.9",
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1",
    "SERVICE_TYPE": "telegram-bot",
    "BUILD_ID": "20250802-1420",
    "TELEGRAM_BOT_TOKEN": "",
    "GOOGLE_API_KEY": "",
    "GOOGLE_API_KEY_FALLBACK": "",
    "NOTION_API_KEY": "",
    "NOTION_DATABASE_ID": "",
    "GEMINI_MODEL": "gemini-2.5-pro"
  },
  "region": "hkg",
  "restart": "always",
  "scale": {
    "minInstances": 1,
    "maxInstances": 2
  },
  "healthCheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}