{
  "name": "telegram-bot",
  "build": {
    "command": "pip install -r requirements.txt"
  },
  "start": {
    "command": "python src/namecard/api/telegram_bot/main.py"
  },
  "port": 5003,
  "environment": {
    "PORT": "5003",
    "PYTHON_VERSION": "3.9",
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1",
    "SERVICE_TYPE": "telegram-bot"
  },
  "regions": ["hkg"],
  "healthcheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}